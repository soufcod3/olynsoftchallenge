{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<main>
    <h1><span>Liste</span> des produits</h1>

{% if products is empty %}
    <div class="empty">
        <h2>Aucun produit disponible</h2>
        <a href="{{ path('product_new') }}">Ajouter un produit</a>
    </div>
{% else %}
    <div class="menu">
        <form action="" method="post">
            <input type="search" placeholder="Tapez un nom de produit">
        </form>
        <a href="{{ path('product_new') }}">+</a>
    </div>
    <div class="container" id="output">
    {% for product in products %}
    <div class="product">
        <div class="product-pic">
            <i class="bi bi-image"></i>
            <div class="action">
                <a href="{{ path('product_edit', {'id': product.id}) }}"><i class="bi bi-pencil-fill"></i></i></a>
                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
        <div class="info">
            <h3>{{ product.name }}</h3>
            <h4>{{ product.price }} â‚¬</h4>
        </div>
    </div>        
    {% endfor %}
    </div>
{% endif %}

</main>

{% endblock %}
